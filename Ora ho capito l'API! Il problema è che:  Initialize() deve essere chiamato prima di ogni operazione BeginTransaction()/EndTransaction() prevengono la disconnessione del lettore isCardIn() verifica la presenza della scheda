name: Build Desktop App

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v4
      
      - uses: actions/setup-dotnet@v4
        with:
          dotnet-version: '6.0.x'
          
      - uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Build SiaeBridge
        working-directory: desktop-app/SiaeBridge
        run: |
          dotnet restore
          dotnet build -c Release

      - name: Prepare files
        shell: pwsh
        run: |
          Copy-Item "desktop-app/SiaeBridge/bin/Release/net472/*" -Destination "desktop-app/SiaeBridge/" -Force
          $dll = Get-ChildItem "attached_assets" -Filter "libSIAE*.dll" | Select-Object -First 1
          if ($dll) { Copy-Item $dll.FullName -Destination "desktop-app/SiaeBridge/libSIAE.dll" -Force }

      - name: Build Electron
        working-directory: desktop-app
        run: |
          npm install
          npm run build

      - uses: actions/upload-artifact@v4
        with:
          name: SIAE-Lettore-Installer
          path: desktop-app/dist/*.exe
